<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>News Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to The Facebook</h1>

    <h2>
      This is the home page for the
      <a href="http://facebook.com">The Facebook</a>
      app
    </h2>

    <%= link_to "Sign up now!", signup_path, id: "Sign up now!", class: "btn btn-large btn-inverse" %>
  </div>

<div class="center">

<%= link_to image_tag("facebook-2.png", alt: "Rails"), 'http://facebook.com/' %>

</div>

<% end %>