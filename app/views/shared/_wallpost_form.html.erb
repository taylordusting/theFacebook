<%= form_for Wallpost.new do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new wallpost..." %>
    <%= f.hidden_field :posted_id, :value => @user.id  %>
  </div>
  <%= f.submit "Post", class: "btn btn-small btn-inverse" %>
<% end %>


