<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    
    <%= render 'friendship_form' if signed_in? %>
    
    <% if current_user?(@user) %>
      <h4>My Friends (<%=@user.friends.count%>)</h4>
      <% for friendship in @user.friendships %>  
        <% if friendship.status == "accepted" %> 
        <li>  
          <%= h friendship.friend.name %>  
          (<%= link_to "remove", friendship_path(:id => friendship.friend.id ), :method => :delete , data: { confirm: 'Are you sure you want to remove this friend?' } %>)  
        </li>
      <% end %>  
    <% end %>
  <% else %>
    <h4>Friends</h4>
    <% for friendship in @user.friendships %>  
      <% if friendship.status == "accepted" %> 
       <li>  
          <%= h friendship.friend.name %> 
       </li>
      <% end %>  
    <% end %>
  <% end %>
    <div>
      <h5> Interests </h5>
      <%=@user.interests%>
      <h5> Quotes </h5>
      <%=@user.quotes %>
    </div>
  </aside>

  <div class="span8">
    <h3>Wall (<%= @user.microposts.count + @user.wallposts.count%>)</h3>
    <section>
      <%= render 'shared/wallpost_form' %>
    </section>
    <% if @user.microposts.any? | @user.wallposts.any? %>
      <ol class="microposts">
        <%= render @microposts + @wallposts%>
      </ol>
      <%= will_paginate @microposts %>
      <%= will_paginate @wallposts %>
    <% end %>
  </div>
</div>

